{
  "version": 2,
  "builds": [
    {
      "src": "nuxt.config.ts",
      "use": "@nuxtjs/vercel-builder",
      "config": {
        "serverFiles": [
          "package.json",
          ".env.prod",
          "i18n/**",
          "public/**",
          "tsconfig.json"
        ],
        "generateStaticRoutes": true
      }
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "/",
      "headers": {
        "Cache-Control": "s-maxage=1, stale-while-revalidate=59"
      }
    }
  ],
  "env": {
    "NUXT_PUBLIC_ENV": "production",
    "NODE_ENV": "production",
    "NUXT_PUBLIC_BASE_URL": "/",
    "NUXT_PUBLIC_PLAUSIBLE_DOMAIN": "dev.scribify.ai",
    "NUXT_PUBLIC_GTAG_ID": "G-Z1V73NNS35",
    "NUXT_PUBLIC_GOOGLE_CLIENT_ID": "872836101862-ib5d3rffoeso3tm9h5evqrq4kodvqa1e.apps.googleusercontent.com",
    "NUXT_PUBLIC_API_BASE": "https://your-api-domain.com"
  },
  "regions": ["iad1"]
}