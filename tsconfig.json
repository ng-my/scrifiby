{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "jsx": "preserve",
    "allowJs": true,
    "resolveJsonModule": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    // "types": ["@nuxt/types", "@nuxtjs/axios", "node"]
  },
  "include": ["src/**/*", "nuxt.config.ts", "app.vue"],
  "exclude": ["node_modules", ".nuxt", "dist"]
}